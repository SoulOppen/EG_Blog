<h1>Posts</h1>
<div class="container-fluid">
<table>
    <tr>
        <th>Titulo</th>
        <th>Creacion</th>
        <th>Url_img</th>
        <th>Contenido</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at %></td>
        <td><%= image_tag post.image_url%></td>
        <td><%= post.content %></td>
    </tr>
    <% end %>
</div>exit
</table>
<h2>Ingrese su posts</h2>
<form method="get" action="posts/create" class="py-3">
    Titulo: <input name="titulo" class="form-control">
    Url Imagen: <input name="url_img" class="form-control">
    Contenido: <textarea name="contenido" class="form-control"></textarea>
    <input type="submit" value="Enviar" class="btn btn-primary my-2">
</form>